---
import { Image } from 'astro:assets'
import { DefaultImage } from '../config'

export interface Props {
  title: string
  description?: string
  coverSVG?: ImageMetadata
  coverImage?: ImageMetadata
  socialImage?: ImageMetadata
}

const { title, description } = Astro.props
---

<div class='relative mx-auto h-52 w-full max-w-screen-xl flex flex-col justify-center items-center'>
  <div class='absolute bottom-0 z-20 py-4 px-8 lg:px-0'>
    <slot name='before' />
    <h2 itemprop='name' class='text-4xl lg:text-7xl font-bold leading-tight text-[#D9A77D]'>{title}</h2>
    <h2 itemprop='abstract description' class='text-xl font-medium italic text-purple-300 mt-2'>
      {description}
    </h2>
    <slot />
  </div>
</div>
